{% extends "dashboard.html.twig" %}

{% block title %}
	Modification d'un gite
{% endblock %}

{% block body%}

	<h1>
		Modifier un gite
	</h1>


	{{ form_start(formGite) }}

	<div class="row">
		<div class="col-md-6">
			{{ form_row(formGite.nom) }}
		</div>
	</div>

	<div class="row">
		<div class="col-md-4">
			{{ form_row(formGite.surface) }}
		</div>
		<div class="col-md-4">
			{{ form_row(formGite.chambre) }}
		</div>
		<div class="col-md-4">
			{{ form_row(formGite.couchage) }}
		</div>
	</div>

	<div class="row">
		<div class="col-md-12">
			{{ form_row(formGite.description) }}
		</div>
	</div>


	<div class="form-group">
		<button type="submit" class="btn btn-success">Modifier
		</button>
		<button type="reset" class="btn btn-danger">Annuler
		</button>
	</div>
	{{ form_end(formGite) }}
{% endblock %}
